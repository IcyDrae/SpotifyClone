<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SpotifyClone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SpotifyClone.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav id="sidebar" class="d-flex flex-column">
            <ul class="list-unstyled">
                <li>
                    <button
                        id="createPlaylistBtn"
                        class="btn w-100 mt-2"
                        onclick="createPlaylist()">
                        + Create Playlist
                    </button>
                </li>
                @if (ViewData[index: "Playlists"] is List<SpotifyClone.Models.Playlist> playlists && playlists.Any())
                {
                    foreach (var playlist in playlists)
                    {
                        <li class="playlists py-1">
                            <a href="@Url.Action("ViewPlaylist", "Playlist", new { id = playlist.Id })"
                               class="text-decoration-none text-light">
                                @playlist.Name
                            </a>
                        </li>
                    }
                }
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="flex-grow-1 p-3">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
function createPlaylist() {
    const name = prompt("Enter playlist name:");
    if (!name) return; // user cancelled

    fetch('/playlist/create', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ name: name })
    })
    .then(res => {
        if (res.ok) {
            alert("Playlist created!");
            location.reload(); // reload to show new playlist
        } else {
            alert("Failed to create playlist.");
        }
    })
    .catch(err => console.error(err));
}
</script>
<style>
body {
    background-color: rgb(18 18 18);
    color: rgb(179 179 179);
}

#sidebar {
    width: 300px !important;
    min-width: 250px;       /* prevent shrinking */
    flex-shrink: 0;         /* critical */
    height: 100vh;
    background-color: rgb(18, 18, 18);
    color: rgb(179, 179, 179);
    border-right: 3px solid black;
    padding: 20px;
    overflow-y: auto;
}

.flex-grow-1 {
    flex-grow: 1; /* main content fills remaining space */
    padding: 20px;
    overflow-y: auto;
}

#sidebar a:hover {
    text-decoration: none;
    color: #1db954; /* Spotify green */
}

#sidebar button#createPlaylistBtn {
    font-weight: bold;
    border-radius: 20px;
    background-color: rgb(31 31 31);
    color: white;
}

.playlists {
    text-align: left;
    margin: 10px;
}

</style>